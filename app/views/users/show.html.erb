<%= stylesheet_link_tag 'users_show', media: 'all', 'data-turbolinks-track': 'reload' %>
    <h1 class="user_name">
        <%= gravatar_for @user %>
        <%= @user.name %>
    </h1>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
 <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>