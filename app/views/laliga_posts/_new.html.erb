<%= stylesheet_link_tag 'new', media: 'all', 'data-turbolinks-track': 'reload' %>

<body>
    <h1 class="posts">投稿</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_with(model: @post, local: true) do |f| %>

            <%= f.label :名前, class: "post_name" %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :コメント, class: "signup_password" %>
            <%= f.text_area :text, class: "form-control" %>

            <%= f.label :画像, class: "post_image" %>
            <%= f.file_field :image %>
            <p class="box"><%= f.check_box :remove_image %>画像を削除する</p>
            <%= f.submit "投稿", class: "btn btn-primary" %>


            <% end %>
        </div>
    </div>
</body>